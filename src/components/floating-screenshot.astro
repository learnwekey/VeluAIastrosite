---
const {
  src = "https://ik.imagekit.io/wgcu5dez6opg/VeluAstro/Velu_videotodocs",
  alt = "Velu diff preview UI",
  class: className = "",
} = Astro.props;
---

<section class={`sectionWrap ${className}`}>
  <div class="backdrop">
    <div class="card">
      <div class="frame">
        <img class="screenshot" src={src} alt={alt} loading="lazy" />
      </div>
    </div>
  </div>
</section>

<style>
  .sectionWrap {
    padding: 64px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .backdrop {
    width: 100%;
    background: #eef4ff;
    border-radius: 32px;
    padding: 28px;
    box-shadow: 0 30px 80px rgba(20, 28, 50, 0.12);
  }

  .card {
    background: #ffffff;
    border-radius: 22px;
    border: 1px solid rgba(79, 70, 229, 0.1);
    box-shadow: 0 20px 60px rgba(15, 23, 42, 0.12);
    padding: 24px;
  }

  .frame {
    width: 100%;
    max-width: 1100px;
    aspect-ratio: 16 / 10;
    background: #ffffff;
    border-radius: 22px;
    border: 1px solid rgba(79, 70, 229, 0.12);
    overflow: hidden;
    margin: 0 auto;
  }

  .screenshot {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    border-radius: 22px;
  }

  @media (max-width: 640px) {
    .sectionWrap {
      padding: 40px 0;
    }

    .backdrop {
      border-radius: 24px;
      padding: 18px;
    }

    .card {
      border-radius: 18px;
      padding: 18px;
    }

    .frame {
      border-radius: 14px;
    }
  }
</style>
